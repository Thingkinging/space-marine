<mapper namespace="com.spaceMarine.mapper.ItemMapper">
	<select id="getList" resultType="com.spaceMarine.vo.ItemVO">
		<![CDATA[
			select distinct * from item
		]]>
	</select>
	
	<select id="read" resultType="com.spaceMarine.vo.ItemVO">
